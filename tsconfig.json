{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true, // Optional, can help with faster TypeScript compilation
    "forceConsistentCasingInFileNames": true, // Optional, enforces consistent filename casing
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2015"],
    "types": ["node", "jest", "@testing-library/jest-dom"],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
}
